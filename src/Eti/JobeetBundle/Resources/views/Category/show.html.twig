{% extends 'EtiJobeetBundle::layout.html.twig' %}
 
{% block title %}
    Jobs in the {{ category.name }} category
{% endblock %}
 
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/etijobeet/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}
 
{% block content %}
    <div class="category">
        <div class="feed">
            <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, '_format': 'atom' }) }}">Feed</a>
        </div>
        <h1>{{ category.name }}</h1>
    </div>
 
    {{ include ('EtiJobeetBundle:Job:list.html.twig', {'jobs': category.activejobs}) }}

    {% if lastPage > 1 %}
        <div class="pagination">
            <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, 'page': 1 }) }}">
                <img src="{{ asset('bundles/etijobeet/images/first.png') }}" alt="First page" title="First page" />
            </a>
 
            <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, 'page': previousPage }) }}">
                <img src="{{ asset('bundles/etijobeet/images/previous.png') }}" alt="Previous page" title="Previous page" />
            </a>
 
            {% for page in 1..lastPage %}
                {% if page == currentPage %}
                    {{ page }}
                {% else %}
                    <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, 'page': page }) }}">{{ page }}</a>
                {% endif %}
            {% endfor %}
 
            <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, 'page': nextPage }) }}">
                <img src="{{ asset('bundles/etijobeet/images/next.png') }}" alt="Next page" title="Next page" />
            </a>
 
            <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, 'page': lastPage }) }}">
                <img src="{{ asset('bundles/etijobeet/images/last.png') }}" alt="Last page" title="Last page" />
            </a>
        </div>
    {% endif %}
 
    <div class="pagination_desc">
        <strong>{{ totalJobs }}</strong> jobs in this category
 
        {% if lastPage > 1 %}
            - page <strong>{{ currentPage }}/{{ lastPage }}</strong>
        {% endif %}
    </div>
{% endblock %}