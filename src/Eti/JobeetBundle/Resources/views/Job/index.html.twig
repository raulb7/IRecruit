{% extends 'EtiJobeetBundle::layout.html.twig' %}
 
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/etijobeet/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}
 
{% block content %}
    <div id="jobs">
        {% for category in categories %}
            <div class="category">
                <div class="category_{{ category.slug }}">
                    <div class="feed">
                        <a href="{{ path('eti_jobeet_category', { 'slug': category.slug, '_format': 'atom' }) }}">Feed</a>
                    </div>
                    <h1><a href="{{ path('eti_jobeet_category', { 'slug': category.slug }) }}">{{ category.name }}</a></h1>
                    {{ include ('EtiJobeetBundle:Job:list.html.twig', {'jobs': category.activejobs}) }}
                </div>

                {% if category.moreJobs %}
                    <div class="more_jobs">
                        and <a href="{{ path('eti_jobeet_category', { 'slug': category.slug }) }}">{{ category.moreJobs }}</a>
                        more...
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}