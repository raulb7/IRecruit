{% extends '@IRecruit/Layout/layout.html.twig' %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <ul class="error_list">
            {% for error in errors %}
                <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block content %}
<div class="container">
    <div class="panel panel-info" style="background-color:aliceblue">
        <div class="panel-heading">
            <h1 align="center">Job creation</h1>
        </div>
        <div style="padding-top:30px;margin:50px;" class="panel-body">
            <form action="{{ path('jobCreate') }}" method="post" {{ form_enctype(form) }} style="color:black">
                <fieldset class="form-group row">
                    <legend style="color:black"><b>Type</b></legend>
                    <div class="form-check">
                            <input
                                type="radio" class="form-check-input"
                                name="{{ form.children.type.vars.full_name }}"
                                value="full-time"
                                {% if form.children.type.vars.full_name == "full-time" %}
                                    checked="checked"
                                {% endif %}
                            >
                            Full-time
                    </div>
                    <div class="form-check">
                            <input
                                    type="radio" class="form-check-input"
                                    name="{{ form.children.type.vars.full_name }}"
                                    value="part-time"
                                    {% if form.children.type.vars.full_name == "part-time" %}
                                        checked="checked"
                                    {% endif %}
                            >
                            Part-time
                    </div>
                    <div class="form-check">
                            <input
                                    type="radio" class="form-check-input"
                                    name="{{ form.children.type.vars.full_name }}"
                                    value="freelance"
                                    {% if form.children.type.vars.full_name == "freelance" %}
                                        checked="checked"
                                    {% endif %}
                            >
                            Freelance
                    </div>
                    {{ form_errors(form.type) }}
                </fieldset>
                <div class="form-group row">
                    {{ form_label(form.category, 'Category', {'label_attr' : {'class' : 'col-2 col-form-label'}})}}
                    {{ form_widget(form.category, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.category) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.position, 'Position', {'label_attr' : {'class' : 'col-2 col-form-label'}})}}
                    <div class="col-10">
                        {{ form_widget(form.position, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.position) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.location, 'Location', {'label_attr' : {'class' : 'col-2 col-form-label'}})}}
                    <div class="col-10">
                        {{ form_widget(form.location, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.location) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.description, 'Description', {'label_attr' : {'class' : 'col-2 col-form-label'}})}}
                    {{ form_widget(form.description, {'attr' : {'class' : 'form-control','rows' : '3'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.howToApply, 'How to apply?', {'label_attr' : {'class' : 'col-2 col-form-label'}})}}
                    <div class="col-10">
                        {{ form_widget(form.howToApply, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.howToApply) }}
                </div>
                 {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-primary pull-right'}}) }}
                {{ form_row(form._token) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}